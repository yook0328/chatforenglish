<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aram.chatproto.SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        android:text="Setting"
        android:textSize="40sp"
        android:padding="8dp"
        android:textColor="@color/entry_hint_color"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/entry_hint_color"
        android:id="@+id/label_bottom_border"
        android:layout_below="@+id/label"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="25sp"
        android:padding="8dp"
        android:text="test@gmail.com"
        android:layout_below="@+id/label_bottom_border"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:paddingRight="8dp"
        android:text="Log Out"
        android:layout_below="@+id/email"
        android:id="@+id/logout_btn"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryLight"
        />

</RelativeLayout>
